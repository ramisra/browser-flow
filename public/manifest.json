{
  "manifest_version": 3,
  "name": "Browser Flow",
  "description": "Capture the current page URL and send it to your AI backend for notes, action items, context, and more.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "windows",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Browser Flow",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}

